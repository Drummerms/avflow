
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "types": ["vite/client", "node", "@playwright/test"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@state/*": ["src/state/*"],
      "@utils/*": ["src/utils/*"],
      "@types": ["src/types"]
    }
  },
  "include": ["src", "playwright.config.ts", "e2e"]
}
